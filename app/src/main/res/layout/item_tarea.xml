<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="@dimen/elevation_card"
    android:layout_height="@dimen/height_card"
    android:layout_marginTop="@dimen/basic_separation_card"
    android:layout_marginLeft="@dimen/basic_separation_card"
    android:layout_marginRight="@dimen/basic_separation_card"
    >
    <LinearLayout
        android:padding="@dimen/basic_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"/>
        <TextView
            android:id="@+id/tvTaskList"
            android:layout_marginLeft="@dimen/basic_horizontal_separation"
            android:textSize="@dimen/basic_text_size"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_example"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>